  <PlayerIntro
    playerName="Lebron James"
    position="Small Forward"
    team="Los Angeles Lakers"
    rebounds="7.5"
    points="27.2"
    assists="7.3"
    quote="Every night on the court I give it my all, and if I'm not giving 100 percent, I criticize myself."
